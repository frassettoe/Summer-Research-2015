#Test of optimization function, using only function calls

import numpy
from scipy.optimize import minimize

def simpleFunction(a,b,c):
    d = 5*a**2+3*b**2+c**2
    return d

class testDevice:
    def simplerFunction(a):
        b = part1(a)
        b = part2(b)
        return b

def part1(a):
    return a**2
def part2(a):
    return 3*a

def simplerFunctionDer(a):
    return 6*a

def simplerFunctionHes(a,b):
    return 6

x0 = numpy.array([1000])
res = minimize(testDevice.simplerFunction, x0 ,method = 'Newton-CG',jac = simplerFunctionDer,hessp = simplerFunctionHes,options={'disp':True})